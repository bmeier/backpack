<GuiXml>
	<Controls>
		<Control name="BP_DropDown" virtual="true">
			<Controls>
				<Control name="$(parent)ComboBox" inherits="ZO_ComboBox">
					<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT"/>
					<Dimensions x="300" />
				</Control>
				<Button name="$(parent)Button" inherits="ZO_DropdownButton">
					<Dimensions x="26" y="26" />
					<Anchor point="LEFT" relativeTo="$(parent)TextField"
						relativePoint="RIGHT" offsetX="10" />
				</Button>
			</Controls>
		</Control>	
	</Controls>
</GuiXml>