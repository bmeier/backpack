<GuiXml>
	<Controls>
		<Control name="BP_ItemCountFilterOptions" inherits="BP_FilterOptions"
			virtual="true">
			<Controls>
				<Label name="$(parent)Label" text="Item Count" inherits="BP_FilterOptionsLabel">
					<Anchor point="TOPLEFT" offsetX="10" offsetY="70"
						relativePoint="TOPLEFT" relativeTo="$(parent)" />
				</Label>
				<Backdrop name="$(parent)Count" inherits="BP_TextField">
					<Dimensions x="300" />
					<Anchor point="TOPLEFT" offsetX="10" offsetY="10"
						relativeTo="$(parent)Label" relativePoint="BOTTOMLEFT" />
				</Backdrop>
				<Control name="$(parent)CompareOperation" inherits="BP_CompareOperation">
					<Dimensions x="300" />
					<Anchor point="TOPLEFT" offsetX="-10" offsetY="10"
						relativeTo="$(parent)Count" relativePoint="BOTTOMLEFT" />
				</Control>
			</Controls>
		</Control>
	</Controls>
</GuiXml>